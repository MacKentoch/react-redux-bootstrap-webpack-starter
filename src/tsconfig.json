{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "typeRoots": ["front/types"],
    "resolveJsonModule": true,
    // "noEmit": true,
    "outDir": "dist",
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "always"
      }
    }]
  },
  "include": ["front/**/*.ts", "front/**/*.tsx", "front/**/*.js"],
  "exclude": ["node_modules", "test/*", "*.d.ts"]
}
