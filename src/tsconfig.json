{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "lib": ["dom", "es2015", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    // "typeRoots": ["front/types", "../node_modules/@types"],
    "resolveJsonModule": true,
    "outDir": "../dist/assets"
    // "baseUrl": ".",
    // "paths": {
    //   "tslib": ["./node_modules/tslib/tslib.d.ts"]
    // }
  },
  "include": ["front/**/*.ts", "front/**/*.tsx", "front/**/*.js", "*.test.tsx"],
  "exclude": ["node_modules", "!node_modules/@types", "*.d.ts"]
}
