{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "typeRoots": ["front/types"],
    "resolveJsonModule": true,
    "outDir": "dist",
  },
  "include": ["front/**/*.ts", "front/**/*.tsx", "front/**/*.js"],
  "exclude": ["node_modules", "test/*", "*.d.ts"]
}
