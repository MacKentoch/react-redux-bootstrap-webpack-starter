{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "types": ["react", "jest"],
    "lib": ["dom", "es2015", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "outDir": "../dist/assets"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
