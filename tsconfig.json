{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "typeRoots": ["src/front/types", "node_modules/@types"],
    "resolveJsonModule": true,
    "outDir": "dist",
  },
  "include": ["src/front/**/*.ts", "src/front/**/*.tsx", "src/front/**/*.js", "*src/**/*.test.tsx"],
  "exclude": ["node_modules", "!node_modules/@types", "*.d.ts"]
}
